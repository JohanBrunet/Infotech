<% layout('layout') -%>
<% if(!authenticated) { %>
  <% include ../partials/navbar %>
<% }; %>
<% if(authenticated) { %>
  <% include ../partials/navbarUser %>
<% }; %>
<div class="container">
  <h1> <%= mess %> </h1>
  <table class="highlight responsive-table centered">
    <thead>
      <tr>
          <th data-field="id">ID</th>
          <th data-field="name">Name</th>
          <th data-field="price">Description</th>
      </tr>
    </thead>

    <tbody>
      <% projects.forEach(function(p) { %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.name %></td>
            <td><%= p.description %></td>
            <td>
              <a class="waves-effect waves-light btn" href='/projects/<%= p.id %>'>
                <i class="material-icons right">launch</i>DÃ©tails
              </a>
            </td>
            <% if(p.owner == owner) { %>
              <td>
                <form method="post" action="/user/projects/<%= p.id %>/delete">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Supprimer</button>
                </form>
              </td>
            <% }; %>
          </tr>
      <% }); %>
    </tbody>
  </table>
</div>
