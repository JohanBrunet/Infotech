<% layout('layout') -%>
<% if(!authenticated) { %>
  <% include ../partials/navbar %>
<% }; %>
<% if(authenticated) { %>
  <% include ../partials/navbarUser %>
<% }; %>
<div class="container" id="card-container">
  <div class="row">
    <div class="card col l6 offset-l3 center-align" id="my-card">
      <% project.forEach(function(p) { %>
      <div class="card-header">
        <h2 class="card-title header grey-text"><strong><%= p.name %></strong></h2>
      </div>
      <div class="card-content">
        <div class="section">
          <i class="material-icons">description</i>Description
          <br>
          <%= p.description %>
        </div>
        <div class="divider"></div>
        <div class="section">
          <i class="material-icons">perm_identity</i>Max participants
          <br>
          <%= p.maxHelpers %>
        </div>
        <div class="divider"></div>
        <div class="section">
          <i class="material-icons">schedule</i>Date de début
          <br>
          <%= p.start %>
        </div>
        <div class="divider"></div>
        <div class="section">
          <i class="material-icons">av_timer</i>Date de fin
          <br>
          <%= p.end %>
        </div>
        <div class="divider"></div>
        <div class="section">
          <i class="material-icons">info</i>Pourcentage finition
          <br>
          <%= p.achievment %> %
        </div>
        <div class="divider"></div>
        <div class="section">
          <i class="material-icons">verified_user</i>Rang requis
          <br>
          <%= rank.name %>
        </div>
        <div class="divider"></div>
        <div class="section">
          <i class="material-icons">supervisor_account</i>Owner
          <br>
          <%= user.firstName %> <%= user.lastName %>
        </div>
      </div>
      <div class="card-footer">
        <p>Ce projet vous intéresse ?</p>
        <form class="col s12" method="post" action="/projects/<%= project.id %>/particpate">
          <button class="btn waves-effect waves-light" type="submit" name="action">Participez !</button>
        </form>
      </div>
      <% }); %>
    </div>
  </div>
</div>
